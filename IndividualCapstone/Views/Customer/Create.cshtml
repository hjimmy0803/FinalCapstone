@model IndividualCapstone.Models.Customer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BusinessName" class="control-label"></label>
                <input asp-for="BusinessName" class="form-control" />
                <span asp-validation-for="BusinessName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.Street" class="control-label"></label>
                <input asp-for="Address.Street" class="form-control" />
                <span asp-validation-for="Address.Street" class="text-danger"></span>
                <label asp-for="Address.City" class="control-label"></label>
                <input asp-for="Address.City" class="form-control" />
                <span asp-validation-for="Address.City" class="text-danger"></span>
                <label asp-for="Address.State" class="control-label"></label>
                <input asp-for="Address.State" class="form-control" />
                <span asp-validation-for="Address.State" class="text-danger"></span>
                <label asp-for="Address.ZipCode" class="control-label"></label>
                <input asp-for="Address.ZipCode" class="form-control" />
                <span asp-validation-for="Address.ZipCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Account.StartDate" class="control-label"></label>
                <input asp-for="Account.StartDate" class="form-control" />
                <span asp-validation-for="Account.StartDate" class="text-danger"></span>

            </div>
            <div class="form-group form-check">
                <div class="row" >
                    <label class="form-check-label  col-md-3">
                        <input class="form-check-input" asp-for="TypeOfService.Rats" /> @Html.DisplayNameFor(model => model.TypeOfService.Rats)
                    </label>
                    <label class="form-check-label col-md-3">
                        <input class="form-check-input" asp-for="TypeOfService.Ants" /> @Html.DisplayNameFor(model => model.TypeOfService.Ants)
                    </label>
                    <label class="form-check-label col-md-3">
                        <input class="form-check-input" asp-for="TypeOfService.Bedbugs" /> @Html.DisplayNameFor(model => model.TypeOfService.Bedbugs)
                    </label>
                </div>
                <div class="row">
                    <label class="form-check-label  col-md-3">
                        <input class="form-check-input" asp-for="TypeOfService.Bees" /> @Html.DisplayNameFor(model => model.TypeOfService.Bees)
                    </label>
                    <label class="form-check-label  col-md-3">
                        <input class="form-check-input" asp-for="TypeOfService.Earwigs" /> @Html.DisplayNameFor(model => model.TypeOfService.Earwigs)
                    </label>
                    <label class="form-check-label  col-md-3">
                        <input class="form-check-input" asp-for="TypeOfService.Mice" /> @Html.DisplayNameFor(model => model.TypeOfService.Mice)
                    </label>
                    <label class="form-check-label col-md-3">
                        <input class="form-check-input" asp-for="TypeOfService.Roaches" /> @Html.DisplayNameFor(model => model.TypeOfService.Roaches)
                    </label>
                </div>
                <div class="row">
                    <label class="form-check-label col-md-3">
                        <input class="form-check-input" asp-for="TypeOfService.Silverfish" /> @Html.DisplayNameFor(model => model.TypeOfService.Silverfish)
                    </label>
                    <label class="form-check-label col-md-3">
                        <input class="form-check-input" asp-for="TypeOfService.Spiders" /> @Html.DisplayNameFor(model => model.TypeOfService.Spiders)
                    </label>
                    <label class="form-check-label col-md-3">
                        <input class="form-check-input" asp-for="TypeOfService.Wasps" /> @Html.DisplayNameFor(model => model.TypeOfService.Wasps)
                    </label>
                    </div>
                    <div class="row">
                        <label class="form-check-label col-md-3">
                            <input class="form-check-input" asp-for="TypeOfService.Waterbugs" /> @Html.DisplayNameFor(model => model.TypeOfService.Waterbugs)
                        </label>
                        <label class="form-check-label col-md-3">
                            <input class="form-check-input" asp-for="TypeOfService.YellowJackets" /> @Html.DisplayNameFor(model => model.TypeOfService.YellowJackets)
                        </label>
                    </div>

                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
</form>
    </div>
</div>



<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
